package ch04.unit03.forEx;

/*
 
        *
       ***
      *****
     *******
    *********
 */
public class Ex25_star {

	public static void main(String[] args) {
		for(int i =1; i <=5; i++) {
			
			for(int j=1; j<=5-i; j++) {
				System.out.print(" ");
			}
			
			
			for(int j=1; j<=i*2-1; j++) {//공백
				System.out.println("*");
				
			}
			System.out.println();
			
		}
    

	}

}
