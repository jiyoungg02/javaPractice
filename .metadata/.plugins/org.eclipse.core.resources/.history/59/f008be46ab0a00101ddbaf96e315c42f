package ch05.unit02;

public class Quiz05 {

	public static void main(String[] args) {
		int [][]num = new int[4][5];
		int n = 0;
		
		
		for(int i=1; i<5; i++) {
			for(int j=0; j<4; j++) { 
				n++;
				if(i%2==0) {
					a[j][i] = n;
				}else {
					a[3-j][i] = n;
				}
				
			}
		}
		
		for(int i=0; i<num.length; i++) {
			for(int j=0; j<num[i].length; j++) {
				System.out.printf("%3d ", num[i][j]);
			}
			System.out.println();
		}
		
	}
}
