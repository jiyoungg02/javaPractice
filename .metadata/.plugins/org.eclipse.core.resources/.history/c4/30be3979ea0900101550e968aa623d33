package ch05.unit01;

import java.util.Scanner;

public class Quiz02 {

	public static void main(String[] args) {
		int []score = new int[5];
		int s;
		
		Scanner sc = new Scanner(System.in);
		
		for(int i=0; i<5; i++) {
			System.out.print(i + "번째 점수 : ");
			score[i] = sc.nextInt();
			if(score[i] < 0 || score[i] > 10) {
				i--;
			}
		}
		
		for(int i=0; i<5; i++) {
			System.out.print("점수 리스트 : ");
		}
		
		
		sc.close();
	}
}
