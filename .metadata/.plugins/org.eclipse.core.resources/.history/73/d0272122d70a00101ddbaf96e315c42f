package ch06.unit02;

public class Ex03 {

	public static void main(String[] args) {
		// 레퍼런스 (참조)변수 선언 및 메모리 할당
		Test3 t1 = new Test3();
		Test3 t2 = new Test3();
			//레퍼런스 변수(메모리를 할당 받은)만큼 필드가 메모리 할당을 받는다.
		
		System.out.println(t1 == t2); //false
			//다른곳을 참조. 다른 객체
		t1.b = 100;
		System.out.println(t1.b + ":" + t2.b); //100 : 0
		
	}
}

class Test3{
	int a = 100;
	int b;
	
	public void disp() {
		System.out.println(a + ":" + b);
	}
}
