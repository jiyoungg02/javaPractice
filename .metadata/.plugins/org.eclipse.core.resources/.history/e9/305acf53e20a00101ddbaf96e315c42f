package ch06.unit02;

public class Ex06 {

	public static void main(String[] args) {
		
	}
}

class Test6{
	// 필드 : 인스턴스변수 + 클래스변수
	// 인스턴스 변수
	int a;
	int b = 10;
	
	// 클래스 변수
	static int c  = 50;
	
	// 메소드(기능) : 인스턴스메소드 + 클래스메소드
	// 인스턴스 메소드
	public void write() {
		int x; //지역변수. write()에서만 사용 가능
		x = 5; // 지역변수는 자동으로 초기화가 이루어지지 않으므로 사용전 값을 할당한다.
		System.out.println(a + ":" + b + ":" + c + ":" + x);
	}
	
	public static void sun() {
		// System.out.println(a); //컴파일 오류.
	}
	
}