package ch06.unit03;

public class Ex02 {

	public static void main(String[] args) {
		Test2 t = new Test2();
		int s;
		
		s = t.sum(100);
		System.out.println("결과 : " + s);
	}
}

class Test2{
	// 1~n 까지 합구하기
	
	public int sum(int n) {
		int s = 0;
		for(int i=1; i<=n; i++) {
			s += i;
		}
		return s;
	}
	
}