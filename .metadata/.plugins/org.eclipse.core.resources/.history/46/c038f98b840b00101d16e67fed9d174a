package ch06.score;

import java.util.Scanner;

public class ScoreUI {
	private Scanner sc = new Scanner(System.in);
	
	public void menu() {
		int ch;
		
		while(true) {
			do {
				System.out.print("1.등록 2.수정 3.삭제 4.학번검색 5.평점 6.리스트 7.종료 => ");
				ch = sc.nextInt();
			}while(ch < 1 || ch > 7);
			
			if(ch == 7) {
				System.out.println("프로그램을 종료 합니다.");
				return;
			}
			
			
		}
		
	}
}
